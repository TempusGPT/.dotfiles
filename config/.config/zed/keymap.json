[
  // Format codes
  {
    "context": "Editor",
    "bindings": { "ctrl-alt-cmd-shift-f": "editor::Format" },
  },

  // Rename symbols
  {
    "context": "Editor",
    "bindings": { "ctrl-alt-cmd-shift-r": "editor::Rename" },
  },

  // Show completions
  {
    "context": "Editor",
    "bindings": { "ctrl-alt-cmd-shift-c": "editor::ShowCompletions" },
  },

  // Switch tabs
  {
    "context": "Pane",
    "bindings": { "ctrl-tab": "pane::ActivateNextItem" },
  },
  {
    "context": "Pane",
    "bindings": { "ctrl-shift-tab": "pane::ActivatePreviousItem" },
  },
]
