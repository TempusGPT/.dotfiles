{
  // Appearance
  "theme": "One Dark",
  "buffer_font_size": 14,
  "buffer_font_family": "Hack",
  "buffer_font_fallbacks": ["D2Coding"],
  "ui_font_family": ".SystemUIFont",

  // Editor
  "format_on_save": "off",
  "soft_wrap": "editor_width",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false,
  },

  // Languages & Tools
  "languages": {
    "HTML": {
      "tab_size": 2,
    },
    "CSS": {
      "tab_size": 2,
    },
    "Svelte": {
      "tab_size": 2,
    },
  },
  "file_types": {
    "JSON": [".prettierrc"],
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
      },
      "enable_lsp_tasks": true,
    },
  },

  // Window & Layout
  "title_bar": {
    "show_user_picture": false,
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
  },
  "tabs": {
    "file_icons": true,
  },
  "diagnostics": {
    "button": false,
  },
  "outline_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "debugger": {
    "button": false,
  },
  "status_bar": {
    "active_encoding_button": "enabled",
  },

  // Panels
  "project_panel": {
    "default_width": 360,
  },
  "notification_panel": {
    "button": false,
  },

  // Terminal
  "terminal": {
    "button": false,
    "blinking": "on",
    "cursor_shape": "bar",
    "default_height": 640,
  },

  // Version Control
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },

  // AI
  "disable_ai": true,

  // Extensions
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "git-firefly": true,
    "svelte": true,
  },

  // Theme
  "theme_overrides": {
    "One Dark": {
      // Editor area
      "editor.background": "#21252aff",
      "editor.gutter.background": "#21252aff",
      "tab.active_background": "#21252aff",
      "toolbar.background": "#21252aff",
      "terminal.background": "#21252aff",

      // Other areas
      "background": "#181c20ff",
      "panel.background": "#181c20ff",
      "tab_bar.background": "#181c20ff",
      "tab.inactive_background": "#181c20ff",
      "status_bar.background": "#181c20ff",
      "title_bar.background": "#181c20ff",
      "title_bar.inactive_background": "#181c20ff",
      "elevated_surface.background": "#181c20ff",
      "surface.background": "#181c20ff",

      // Element states
      "element.hover": "#272c33ff",
      "element.active": "#363c46ff",
      "element.selected": "#363c46ff",
      "ghost_element.hover": "#272c33ff",
      "ghost_element.active": "#363c46ff",
      "ghost_element.selected": "#363c46ff",

      // Miscellaneous
      "drop_target.background": "#363c4680",
      "scrollbar.thumb.hover_background": "#c8ccd44c",
      "scrollbar.track.border": "#363c46ff",
      "border": "#363c46ff",
    },
  },
}
